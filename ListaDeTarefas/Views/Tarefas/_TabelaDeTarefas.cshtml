@model IEnumerable<ListaDeTarefas.Models.Tarefas>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descrição)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Completo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.Completo)
                {
                    @Html.DisplayFor(modelItem => item.Descrição)
                }
                else
                {
                    <div class="TarefaCompleta">@Html.DisplayFor(modelItem => item.Descrição)</div>
                }
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.Completo, new { id=item.Id, @class = "ActiveCheck"})
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    </table>

<script src="~/Custom_Scripts/AddCheckBoxListener.js"</script>
